{% extends 'base.html.twig' %}

{% block title %}New Contact{% endblock %}

{% block body %}
 <div class="container">
       <div class="row">
       <div class="col-md-2" style='border: 5px; padding: 20px; background-color: #3B5145;' ></div>
           <div class="col-md-8" style='border: 5px; padding: 20px; background-color: #D5F5E3;'>
                 <h1 class="h3 mb-3 font-weight-normal">Keep in touche</h1>
                   {{form_start(form)}}
                   <div class="row">
                    <div class="col-sm-6">
                        {{ form_row(form.firstName, {'attr': {'placeholder': "Votre Prénom"}}) }}
                    </div>
                      <div class="col-sm-6">
                        {{ form_row(form.lastName, {'attr': {'placeholder': "Votre Nom"}}) }}
                    </div>
                   </div>
                    <div class="row">
                       <div class="col-sm-6">
                            {{ form_row(form.email, {'attr': {'placeholder': "Votre email"}}) }}
                        </div>
                          <div class="col-sm-6">
                            {{ form_row(form.telephone, {'attr': {'placeholder': "Votre téléphone"}}) }}
                        </div>
                   </div>
                                     
                     {{ form_row(form.message, {'attr': {'placeholder': "Votre message"}}) }}
                
                         <button class="btn btn-outline-info float-right" >{{ button_label|default('Envoyer') }}</button> 
                   {{form_end(form)}}
              
           </div>
        <div class="col-md-2" style='border: 5px; padding: 20px; background-color: #3B5145;'></div>
       </div>
</div>
{% endblock %}