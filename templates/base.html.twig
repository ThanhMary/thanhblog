<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} MY BLOG {% endblock %}</title>
       {% block stylesheets %}
        <link rel="stylesheet" href="/css/bootstrap.css">
        {% endblock %}
    </head>

    <body>
   
       <nav class="navbar navbar-expand-lg navbar-light bg-light">
    
         <a class="navbar-brand" href="{{path('blog')}}"><img src="https://i2.wp.com/www.lyc-lecorbusier-cormeilles.ac-versailles.fr/wp-content/uploads/sites/63/2019/01/blog-logo-animated_720x342.gif?zoom=1.5&fit=720%2C342", style="width:180px;height:80px;" />
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                    
                    <li class="nav-item active">
                        <a class="nav-link" href="{{path('home')}}">ABOUT US </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('blog')}}">ARTICLES </a>
                    </li>
              
                     <li class="nav-item">
                         <a class="nav-link" href="{{path('contact_new')}}">CONTACT</a> 
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('blog_create')}}">CREATE ARTICLE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('security_registration')}}">CREATE USER</a>
                    </li>

                     {% if not app.user %}
                      <ul class="navbar-nav float-right">
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('security_login')}}">LOG IN</a>
                        </li>
                        </ul>
                    {% else %}     
                     <ul class="navbar-nav push-right">
                         <li class="nav-item">
                            <h3 class="nav-link"> Welcome {{app.user.username}}</h3>
                        </li>
                              
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('security_logout')}}">LOG OUT</a>
                        </li>
                    </ul>
                    {% endif %}  
                </ul>
            
            </div>
        </nav>
    <div class="container">
        {% block body %}
        
            <div class="container">
                {% for label,messages in app.flashes %}
                    {% for message in messages %}
                <center> <div class="message"><br>
                        <p>{{message}}</p>MERCI BIEN 
                    </div></center>
                    {% endfor %}
                {% endfor %}
  
      {% endblock %}
    </div> 
    {% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    
    {% endblock %}
    </body>
</html>
